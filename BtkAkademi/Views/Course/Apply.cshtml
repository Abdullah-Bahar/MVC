@model Candidate

<div class="display-6">
	Apply
</div>

@* <form method="post" action="/course/apply"> *@
<form method="post" asp-action="Apply">

	<!-- Genel olarak tüm validasyon hataları tek bir yerde yazdırılır -->
	<div class="text-danger" asp-validation-summary="All"></div>

	<div class="form-group my-2">
		@* <label>Email</label>
		<input name="Email" class="form-control" /> *@

		<label asp-for="Email">E-mail</label>
		<input asp-for="Email" class="form-control" />
		<span asp-validation-for="Email"></span> <!-- Buradaki input'a özel validasyon hataları buraya yazılır -->
	</div>

	<div class="form-group my-2">
		<label asp-for="FirstName"></label>
		<input asp-for="FirstName" class="form-control" />
	</div>

	<div class="form-group my-2">
		<label asp-for="LastName"></label>
		<input asp-for="LastName" class="form-control" />
	</div>

	<div class="form-group my-2">
		<label asp-for="Age"></label>
		<select asp-for="Age" class="form-control" name="Age">
			<option value="18">18</option>
			<option value="19">19</option>
			<option value="20">20</option>
			<option value="21">21</option>
			<option value="22">22</option>
			<option value="23">23</option>
		</select>
	</div>

	<fieldset class="form-group my-2">
		<legend>Select One Course</legend>
		<p>
			<input id="mvc" type="radio" asp-for="SelectedCourse" value="ASP.NET Core MVC" checked>
			<label>ASP.NET Core MVC</label>
		</p>
		<p>
			<input id="api" type="radio" asp-for="SelectedCourse" value="ASP.NET Core API">
			<label>ASP.NET Core API</label>
		</p>
		<p>
			<input id="blazor" type="radio" asp-for="SelectedCourse" value="Blazor">
			<label>Blazor</label>
		</p>
	</fieldset>

	<div>
		<button class="btn btn-primary" type="submit">Apply</button>
		@* <a class="btn btn-warning" href="/">Home</a> *@
		<a class="btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>
	</div>
</form>