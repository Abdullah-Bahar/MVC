@model ProductDtoForInsertion

<div class="text-center">
	<div class="display-6">
		Create
	</div>
</div>

<!-- 
	enctype="multipart/form-data" 
		- HTML formlar default olarak sadece text veri gönderir
		- File gönderimi binary (ikili) veri içerir
		- Bu yüzden tarayıcıya şunu dememiz gerekir:
		- “Bu formda dosya var, özel paketleme yap”
	
-->
<form method="post" asp-action="Create" enctype="multipart/form-data">

	<div class="text-danger" asp-validation-summary="All"></div>

	<div class="form-group my-3">
		<label asp-for="CategoryId">Category Name</label>
		<select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories">

			<option value="">-- Kategori Seçiniz --</option>
		</select>
	</div>

	<div class="form-group my-3">
		<label asp-for="ProductName">Product Name</label>
		<input asp-for="ProductName" class="form-control" />
	</div>

	<div class="form-group my-3">
		<label asp-for="Summary">Product Summary</label>
		<input asp-for="Summary" class="form-control" />
	</div>

	<div class="form-group my-3">
		<label asp-for="Price"></label>
		<input asp-for="Price" class="form-control" />
	</div>

	<div class="form-group my-3">
		<label asp-for="ImageUrl"></label>
		<input name="file" type="file" class="form-control" />
	</div>

	<div class="form-group my-3">
		<button class="btn btn-success mx-1" type="submit">
			<i class="fa fa-save"></i>
			Save
		</button>

		<a asp-action="Index" class="btn btn-secondary mx-1">
			<i class="fa-solid fa-arrow-left"></i>
			Back
		</a>
	</div>
</form>